{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Happiness in 2019",
    "width": 800,
    "height": 600,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/bryanchze/w10Homework/main/js/countries.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "layer":[
        {
          "mark": {"type": "geoshape", "fill": "lightgray"},
          "encoding": {
            "tooltip": {
              "field": "properties.NAME"
            }
          }
        },
        {
          "transform": [
           {
             "lookup": "properties.NAME",
             "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/bryanchze/w10Homework/main/data/world_happiness_2019.csv"
                },
                "key": "Country or region",
                "fields": [
                    "Score","Overall rank"
                ]
            }
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "Score",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Overall rank",
                "type": "quantitative"
            },
            {
                "field": "Score",
                "type": "quantitative"
            }   
                ]
            }
        }
    ]
}